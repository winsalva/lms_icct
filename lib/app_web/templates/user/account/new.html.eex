<%= render(AppWeb.SharedView, "back-navigation.html", conn: @conn, title: "Create Account") %>

<div class="sub-container">
<%= form_for @user, Routes.user_account_path(@conn, :create), fn f -> %>
<%= if @user.action do %>
<div class="alert alert-danger">
  <p>Something went wrong. Please check the errors below.</p>
</div>
<% end %>
<label>First name</label>
<%= text_input f, :first_name, placeholder: "ex. Juan" %>
<%= error_tag f, :first_name %>

<label>Middle name</label>
<%= text_input f, :middle_name, placeholder: "ex. Dela Cruz" %>
<%= error_tag f, :middle_name %>

<label>Last name</label>
<%= text_input f, :last_name, placeholder: "ex. Ramirez" %>
<%= error_tag f, :last_name %>

<label>Email</label>
<%= text_input f, :email, placeholder: "Enter your active email.." %>
<%= error_tag f, :email %>

<label>Password</label>
<%= text_input f, :password, placeholder: "At least 6 characters.." %>
<%= error_tag f, :password %>

<label>Confirm password</label>
<%= text_input f, :password_confirmation, placeholder: "Re-type your password.." %>
<%= error_tag f, :password_confirmation %>

<%= submit "Create account" %>
<% end %>

<p class="center">Already have an account? <%= link "Log in.", to: Routes.session_path(@conn, :new) %></p>
</div>
